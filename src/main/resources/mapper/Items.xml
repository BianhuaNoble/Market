<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.asghoul.dao.ItemsDao">
    <select id="selectAll" resultType="Items" parameterType="hasmap">
        SELECT * FROM  items,Picitem;
        <where>
            <if test="itemId!=null">
                AND itemId=#{id}
            </if>
        </where>
    </select>
    <select id=""></select>
</mapper>